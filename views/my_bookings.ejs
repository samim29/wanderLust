<% layout("/layouts/boilerplate") %>
<div class="container mt-4">
    <h2>Your Bookings</h2>

    <% if (reservations.length === 0) { %>
        <p>You don't have any bookings yet.</p>
    <% } else { %>
        <div class="list-group d-flex flex-wrap px-3 py-1 gap-3">
            <% reservations.forEach(reservation => { %>
                <div class="list-group-item mb-3 border shadow-sm rounded w-100 w-sm-48 w-md-23">
                    <h5><%= reservation.listing.title %></h5>
                    <p><strong>Check-in:</strong> <%= reservation.checkin.toLocaleDateString() %></p>
                    <p><strong>Check-out:</strong> <%= reservation.checkout.toLocaleDateString() %></p>
                    <p><strong>Guests:</strong> <%= reservation.guests %></p>
                    <p><strong>Total Price:</strong> â‚¹<%= reservation.totalPrice.toLocaleString("en-IN") %></p>
                </div>
            <% }) %>
        </div>
    <% } %>
</div>
